<%= render 'partial/navbar'%>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ログイン</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %><br /><br />
        またはメールアドレスでログイン
        <div class="form-group">
          <br />
          <%= f.email_field :email,:class => 'form-control',:placeholder => "Email", autofocus: true %>
        </div>

        <div class="form-group">
          
          <%= f.password_field :password,:class => 'form-control',:placeholder => 'パスワード', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :入力した情報を保存する %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn-login" %>
        </div>

        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>


