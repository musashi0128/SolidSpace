<%= render 'partial/navbar'%>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>新規登録</h2>
      <hr>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>

        <%= link_to "Facebookで登録", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %><br/ ><br/>
        またはメールアドレスで登録

        <div class="form-group">
          <br />
          <%= f.email_field :email,:class => 'form-control',:placeholder => "Email", autofocus: true %>
        </div>

        <div class="from-group">
          
          
          <%= f.password_field :password,:class => 'form-control',:placeholder => 'パスワード', autocomplete: "off" %>
        </div>

        <div class="form-group">
          <br />
          <%= f.password_field :password_confirmation,:class => 'form-control',:placeholder => 'パスワードの確認',autocomplete: "off" %><br/ >
        </div>

        <div class="actions">
          <%= f.submit "登録する",class:"btn-login" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>

